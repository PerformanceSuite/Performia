{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Song Map",
  "type": "object",
  "required": [
    "id",
    "duration_sec",
    "tempo",
    "beats",
    "downbeats",
    "meter",
    "chords",
    "lyrics"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "duration_sec": {
      "type": "number"
    },
    "meter": {
      "type": "object",
      "properties": {
        "numerator": {
          "type": "integer"
        },
        "denominator": {
          "type": "integer"
        }
      },
      "required": [
        "numerator",
        "denominator"
      ]
    },
    "tempo": {
      "type": "object",
      "properties": {
        "bpm_global": {
          "type": "number"
        },
        "curve": {
          "type": "array",
          "items": {
            "type": "array",
            "items": [
              {
                "type": "number"
              },
              {
                "type": "number"
              }
            ]
          }
        },
        "confidence": {
          "type": "number"
        }
      },
      "required": [
        "bpm_global"
      ]
    },
    "beats": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "downbeats": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "key": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "start": {
            "type": "number"
          },
          "end": {
            "type": "number"
          },
          "tonic": {
            "type": "string"
          },
          "mode": {
            "type": "string"
          },
          "conf": {
            "type": "number"
          }
        },
        "required": [
          "start",
          "end",
          "tonic",
          "mode"
        ]
      }
    },
    "chords": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "start": {
            "type": "number"
          },
          "end": {
            "type": "number"
          },
          "label": {
            "type": "string"
          },
          "conf": {
            "type": "number"
          }
        },
        "required": [
          "start",
          "end",
          "label"
        ]
      }
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "start": {
            "type": "number"
          },
          "end": {
            "type": "number"
          },
          "label": {
            "type": "string"
          }
        },
        "required": [
          "start",
          "end",
          "label"
        ]
      }
    },
    "lyrics": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "start": {
            "type": "number"
          },
          "end": {
            "type": "number"
          },
          "text": {
            "type": "string"
          },
          "conf": {
            "type": "number"
          }
        },
        "required": [
          "start",
          "end",
          "text"
        ]
      }
    },
    "performance": {
      "type": "object",
      "properties": {
        "melody": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "bass": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      }
    },
    "provenance": {
      "type": "object"
    }
  }
}