{
  "visual_hierarchy": {
    "weight": 1.2,
    "description": "Organization and prioritization of elements to guide user attention",
    "criteria": [
      "Clear primary/secondary/tertiary elements",
      "Appropriate size scaling and differentiation",
      "Effective use of contrast to establish priority",
      "Logical flow and grouping of related elements",
      "Natural eye flow through the interface"
    ],
    "scoring_guide": {
      "10": "Perfect information hierarchy, masterful use of size/color/spacing",
      "8-9": "Very clear hierarchy, minor room for improvement",
      "6-7": "Generally clear, some confusion possible",
      "4-5": "Hierarchy exists but unclear in places",
      "2-3": "Confusing hierarchy, unclear priorities",
      "1": "No discernible hierarchy"
    },
    "evaluation_questions": [
      "Is the most important element immediately obvious?",
      "Are secondary actions clearly distinguished?",
      "Does eye flow naturally through the interface?",
      "Is size differentiation appropriate?",
      "Is contrast used effectively?"
    ]
  },
  "typography": {
    "weight": 1.0,
    "description": "Quality of text presentation and readability",
    "criteria": [
      "Readable font sizes (16px+ for body, 14px+ mobile)",
      "Consistent type scale with clear hierarchy",
      "Appropriate line height (1.5-1.8 for body text)",
      "Font weight hierarchy (3-4 weights maximum)",
      "Sufficient text contrast for readability",
      "Appropriate letter spacing"
    ],
    "scoring_guide": {
      "10": "Perfect type scale, excellent readability, masterful font weight usage",
      "8-9": "Very readable, minor improvements possible",
      "6-7": "Generally readable, some issues present",
      "4-5": "Readability issues present",
      "2-3": "Significant readability problems",
      "1": "Illegible or painful to read"
    },
    "standards": {
      "body_text_min": "16px",
      "body_text_mobile_min": "14px",
      "line_height_body": "1.5-1.8",
      "line_height_headings": "1.2-1.4",
      "max_font_weights": 4
    }
  },
  "color_contrast": {
    "weight": 1.0,
    "description": "Color harmony, accessibility, and brand consistency",
    "criteria": [
      "WCAG 2.1 AA compliance (4.5:1 normal, 3:1 large text)",
      "Color harmony and balance throughout",
      "Brand consistency (Performia blue/purple gradient)",
      "Semantic color usage (success/error/warning)",
      "60-30-10 color distribution rule"
    ],
    "scoring_guide": {
      "10": "Perfect WCAG AAA compliance, beautiful harmony, perfect brand alignment",
      "8-9": "WCAG AA compliant, harmonious, on-brand",
      "6-7": "Mostly compliant, generally harmonious",
      "4-5": "Some contrast issues, color imbalance",
      "2-3": "Accessibility issues, poor harmony",
      "1": "Severe accessibility violations"
    },
    "standards": {
      "wcag_aa_normal": "4.5:1",
      "wcag_aa_large": "3:1",
      "wcag_aaa_normal": "7:1",
      "wcag_aaa_large": "4.5:1",
      "brand_primary": "blue-500 to purple-500 gradient",
      "brand_accent": "cyan-400/500/600",
      "brand_background": "gray-900/800"
    }
  },
  "spacing_layout": {
    "weight": 1.1,
    "description": "Use of whitespace, alignment, and spatial relationships",
    "criteria": [
      "Consistent spacing scale (8px grid system)",
      "Adequate breathing room around elements",
      "Elements properly aligned to grid",
      "Responsive padding appropriate for screen size",
      "Logical grouping of related elements"
    ],
    "scoring_guide": {
      "10": "Perfect breathing room, flawless alignment, masterful spacing system",
      "8-9": "Generous space, very good alignment",
      "6-7": "Adequate space, minor alignment issues",
      "4-5": "Cramped or excessive space, alignment problems",
      "2-3": "Very poor spacing, chaotic layout",
      "1": "Unusable layout"
    },
    "standards": {
      "grid_base": "8px",
      "spacing_scale": [4, 8, 12, 16, 24, 32, 48, 64],
      "mobile_padding": "16-24px",
      "desktop_padding": "32-48px",
      "min_breathing_room": "16px"
    }
  },
  "component_design": {
    "weight": 1.0,
    "description": "Quality and consistency of individual UI components",
    "criteria": [
      "Button hierarchy clear (primary, secondary, tertiary)",
      "Interactive states defined (hover, active, focus, disabled)",
      "Touch targets adequate (44x44px minimum)",
      "Border radius consistent across components",
      "Shadow system coherent and purposeful",
      "Components feel modern and polished"
    ],
    "scoring_guide": {
      "10": "Perfectly polished, consistent, modern, delightful",
      "8-9": "Highly polished, very consistent",
      "6-7": "Generally polished, mostly consistent",
      "4-5": "Some polish issues, inconsistencies present",
      "2-3": "Unpolished, inconsistent",
      "1": "Broken or unusable components"
    },
    "standards": {
      "min_touch_target": "44x44px",
      "button_padding_min": "12px 24px",
      "border_radius_small": "4-6px",
      "border_radius_medium": "8-12px",
      "border_radius_large": "16-24px",
      "required_states": ["hover", "active", "focus", "disabled"]
    }
  },
  "animation_interaction": {
    "weight": 0.9,
    "description": "Quality of transitions, animations, and micro-interactions",
    "criteria": [
      "Transitions smooth and performant (60fps)",
      "Appropriate durations (200-300ms common)",
      "Natural easing functions (ease-out, ease-in-out)",
      "Motion serves clear purpose",
      "Micro-interactions are delightful",
      "Loading states well-designed"
    ],
    "scoring_guide": {
      "10": "Smooth, delightful, purposeful, perfect 60fps",
      "8-9": "Smooth transitions, good purpose",
      "6-7": "Generally smooth, adequate purpose",
      "4-5": "Some jank, unclear purpose",
      "2-3": "Janky, distracting animations",
      "1": "Broken or severely degrading UX"
    },
    "standards": {
      "target_fps": 60,
      "standard_duration": "200-300ms",
      "fast_duration": "100-150ms",
      "slow_duration": "400-500ms",
      "recommended_easing": ["ease-out", "ease-in-out", "cubic-bezier"],
      "max_loading_time_without_feedback": "200ms"
    }
  },
  "accessibility": {
    "weight": 1.3,
    "description": "Usability for all users including those with disabilities",
    "criteria": [
      "WCAG 2.1 AA compliance (minimum)",
      "Full keyboard navigation support",
      "Visible focus indicators on all interactive elements",
      "Screen reader compatible with proper ARIA labels",
      "Touch targets adequate (44x44px minimum)",
      "Color not sole differentiator of information"
    ],
    "scoring_guide": {
      "10": "Exceeds WCAG AAA, exceptional keyboard nav, perfect focus indicators",
      "8-9": "WCAG AA compliant, excellent keyboard support",
      "6-7": "WCAG AA mostly compliant, decent keyboard support",
      "4-5": "Some accessibility issues present",
      "2-3": "Multiple accessibility violations",
      "1": "Inaccessible to many users"
    },
    "standards": {
      "wcag_level": "AA",
      "wcag_version": "2.1",
      "min_touch_target": "44x44px",
      "focus_indicator_min": "2px",
      "keyboard_navigation": "required",
      "screen_reader_support": "required",
      "required_aria_labels": ["buttons", "links", "form inputs", "landmarks"]
    }
  },
  "overall_aesthetic": {
    "weight": 1.0,
    "description": "Holistic visual quality and professional appearance",
    "criteria": [
      "Professional, credible appearance",
      "Modern, contemporary feel",
      "Cohesive design language throughout",
      "Strong brand alignment",
      "Visual confidence and polish",
      "Attention to detail evident"
    ],
    "scoring_guide": {
      "10": "Stunning, award-worthy, sets industry standard",
      "8-9": "Professional, modern, cohesive, impressive",
      "6-7": "Solid professional appearance",
      "4-5": "Acceptable but dated or inconsistent",
      "2-3": "Unprofessional appearance",
      "1": "Severely undermines credibility"
    },
    "evaluation_factors": [
      "First impression impact",
      "Consistency across all elements",
      "Modern vs dated feel",
      "Professional polish level",
      "Brand representation quality",
      "Detail refinement"
    ]
  },
